<nav class="bg-gray-800 p-4 text-white flex justify-between items-center">
  <div class="flex items-center space-x-4">
    <%= link_to "Home", root_path, class: "text-white hover:text-gray-300" %>
    <%= link_to "Projects", projects_path, class: "text-white hover:text-gray-300" %>
    
    <div class="flex items-center bg-white rounded overflow-hidden">
      <%= form_with url: projects_path, method: :get, class: "flex" do |form| %>
        <%= form.text_field :query, placeholder: "Search...", class: "px-4 py-2 w-full text-gray-900", aria: { label: "Search" } %>
        <%= form.submit "Search", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4" %>
      <% end %>
    </div>
  </div>

  <div>
    <% if user_signed_in? %>
      <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-white hover:text-gray-300" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "text-white hover:text-gray-300" %>
    <% end %>
  </div>
</nav>
